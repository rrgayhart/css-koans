<section class="koan-show-container">
  <div class="koan-email-container pure-gutter">
    <div class="koan-email pure-u-24-24">
      <%= render partial: "client_email", locals: { koan: @koan } %>
    </div>
  </div>
  <div class="code-row pure-g">
    <div class="pure-u-1-1 pure-u-md-1-2 pure-gutter">
      <div class="code-block">
        <%= render partial: "codepen_render", locals: { koan: @koan } %>
      </div>
    </div>
    <div class="pure-u-1-1 pure-u-md-1-2 pure-gutter">
      <div class="goal-block">
        <div class="goal-title-block">
          <p>The Propsed Design</p>
        </div>
        <div class="goal-visual-block">
          <%= image_tag @koan.solution.image.url(:top_crop) %>
        </div>
      </div>
    </div>
  </div>
  <div class="interaction-row pure-g">
    <div class="fork-button-block pure-u-1-1 pure-u-md-1-2">
      <div class="pure-g">
        <div class="pure-u-1-1 pure-u-md-1-2 pure-gutter">
          <%= link_to('Fork on Codepen', @koan.codepen_permalink, class: 'codepen-fork', :target => "_blank") %>
        </div>
        <div class="pure-u-1-1 pure-u-md-1-2 pure-gutter">
          <%= link_to('Fork on Github', @koan.github_permalink, class: 'github-fork', :target => "_blank") %>
        </div>
      </div>
    </div>
    <div class="think-about-row pure-u-1-2">
    </div>
  </div>
</section>
